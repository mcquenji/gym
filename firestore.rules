rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Match any document in the 'users' collection
    match /users/{userId} {
      // Allow read to everyone
      allow read: if true;

      // Only allow write for the user's own document
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /referrals/{referralId} {
      allow read: if true;

      allow update: if recource.data.referredUserId == null &&  request.resource.data.referredUserId != resource.data.referredUserId && request.resource.data.diff(resource.data).affectedKeys().size() == 1;
    }
  }
}
